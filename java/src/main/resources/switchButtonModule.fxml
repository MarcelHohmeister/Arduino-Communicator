<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Region?>
<?import java.lang.String?>

<VBox spacing="10" styleClass="moduleBox" xmlns:fx="http://javafx.com/fxml"
      fx:controller="net.hohmeima.arduinocommunicator.app.controller.modules.switchButtonModuleController">
    <stylesheets>
        <String fx:value="/moduleStyles.css"/>
    </stylesheets>

    <!-- Titel & rechte Buttons -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <VBox spacing="2">
            <Label fx:id="moduleTitle" text="Neues Modul" styleClass="moduleTitle"/>
            <Label fx:id="moduleType" text="Modultyp: Switch-Button" styleClass="moduleType"/>
        </VBox>

        <Region HBox.hgrow="ALWAYS"/>

        <VBox spacing="0" alignment="TOP_RIGHT">
            <Button fx:id="deleteBtn" text="âœ•" styleClass="deleteButton" onAction="#handleDelete"/>
        </VBox>
    </HBox>

    <!-- Datentyp-Eingabefeld -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Datentyp:" styleClass="moduleLabel"/>
        <TextField fx:id="datatypeField" text="SWITCH"/>
    </HBox>

    <!-- Schalter & Taster -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <CheckBox fx:id="switchCheckBox" text="Schalter" styleClass="moduleCheckBox"
                  onAction="#handleSwitchToggle"/>
        <Button fx:id="momentaryButton" text="Taster" styleClass="momentaryButton"
                onMousePressed="#handleButtonPress"
                onMouseReleased="#handleButtonRelease"/>
    </HBox>
</VBox>