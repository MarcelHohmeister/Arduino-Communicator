<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Region?>
<?import java.lang.String?>

<VBox spacing="10" styleClass="moduleBox" xmlns:fx="http://javafx.com/fxml"
      fx:controller="net.hohmeima.arduinocommunicator.app.controller.modules.textModuleController">
    <stylesheets>
        <String fx:value="/moduleStyles.css"/>
    </stylesheets>

    <!-- Titel & rechte Buttons -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <VBox spacing="2">
            <Label fx:id="moduleTitle" text="Neues Modul" styleClass="moduleTitle"/>
            <Label fx:id="moduleType" text="Modultyp: Text Modul" styleClass="moduleType"/>
        </VBox>

        <Region HBox.hgrow="ALWAYS"/>

        <VBox spacing="0" alignment="TOP_RIGHT">
            <Button fx:id="deleteBtn" text="âœ•" styleClass="deleteButton" onAction="#handleDelete"/>
        </VBox>
    </HBox>

    <!-- Text-Eingabe -->
    <TextField fx:id="textField" prefWidth="200" styleClass="textField" promptText="Text eingeben..."/>

    <!-- Datentyp-Eingabe -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Datentyp:" styleClass="moduleLabel"/>
        <TextField fx:id="datatypeField" text="TEXT"/>
    </HBox>

    <!-- Action Buttons + Settings Button -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Send to Arduino" styleClass="sendButton" onAction="#handleSend"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="settingsBtn" text="Einstellungen" styleClass="settingsButton" onAction="#handleSettings"/>
    </HBox>
</VBox>